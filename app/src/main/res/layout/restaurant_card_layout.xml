<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/restaurant_card"
    app:cardUseCompatPadding="true"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/small_card_image_size"
                android:id="@+id/restaurant_image"
                android:src="@drawable/restaurant_placeholder"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/restaurantimage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.8"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/restaurant_rating_text"
                android:layout_marginBottom="@dimen/activity_vertical_margin_half"
                android:text="##"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/restaurant_rating_text"
                android:drawableEnd="@drawable/ic_star_white_24dp"
                android:tint="@color/white"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World"
                android:id="@+id/restaurant_name"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/card_restaurant_name_size"
                android:ems="10"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="1.5"
                android:shadowDy="1.3"
                android:shadowRadius="1.8"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                />



        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1.0"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            >

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:src="@drawable/ic_delete_black_24dp"
                android:contentDescription="@string/delete_restaurant"
                android:id="@+id/delete_restaurant_btn"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:src="@drawable/ic_edit_black_24dp"
                android:contentDescription="@string/edit_restaurant"
                android:id="@+id/edit_restaurant_btn"
                android:tint="@color/ok_blue"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:src="@drawable/ic_unfold_more_black_24dp"
                android:contentDescription="@string/open_restaurant"
                android:tint="@color/ok_blue"
                android:id="@+id/show_restaurant_btn"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
        </LinearLayout>



    </LinearLayout>



</android.support.v7.widget.CardView>